{{> menu active="login"}}
<div class="box has-background-black-ter">
  <section class="section">
    <h1 class="title has-text-white-ter">Log in</h1>
    <form action="/authenticate" method="post">
      <div class="field">
        <label class="label has-text-white-ter">Email</label>
        <input class="input" type="text" placeholder="Enter email" name="email">
      </div>
      <div class="field">
        <label class="label has-text-white-ter">Password</label>
        <input class="input" type="password" placeholder="Enter Password" name="password">
      </div>
      <div class="field is-grouped">
        <button class="button is-link">Submit</button>
      </div>
    </form>
  </section>
</div>