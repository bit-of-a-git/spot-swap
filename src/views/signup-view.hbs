{{> menu active="signup"}}
<div class="box has-background-black-ter">
  <section class="section">
    <h1 class="title has-text-white-ter">Sign up</h1>
    <form action="/register" method="POST">
      <label class="label has-text-white-ter">Name</label>
      <div class="field is-horizontal">
        <div class="field-body">
          <div class="field">
            <input class="input"
                   type="text"
                   placeholder="Enter first name"
                   name="firstName">
          </div>
          <div class="field">
            <input class="input"
                   type="text"
                   placeholder="Enter last name"
                   name="lastName">
          </div>
        </div>
      </div>
      <div class="field">
        <label class="label has-text-white-ter">Email</label>
        <input class="input" type="text" placeholder="Enter email" name="email">
      </div>
      <div class="field">
        <label class="label has-text-white-ter">Password</label>
        <input class="input"
               type="password"
               placeholder="Enter Password"
               name="password">
      </div>
      <div class="field is-grouped">
        <button class="button is-link">Submit</button>
      </div>
    </form>
  </section>
</div>
